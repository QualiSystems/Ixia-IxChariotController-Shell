<Driver Description="Shell to run IxChariot tssts" MainClass="driver.IxChariotControllerDriver" Name="IxChariotControllerDriver" Version="1.2.0">
    <Layout>
         <Category Name="Hidden Commands">
            <Command Description="" DisplayName="Keep Alive" EnableCancellation="true" Name="keep_alive" Tags="" />
            <Command Name="end_session" />
            <Command Name="del_session" />
        </Category>

		<Command Description="Reserve endpoints and load configuration" DisplayName="Load configuration" Name="load_config">
	    	<Parameters>
            	<Parameter Description="IxChariot config to load" DisplayName="IxChariot Config" Mandatory="True" Name="ixc_config" Type="String" />
            </Parameters>
        </Command>
        <Command Description="" DisplayName="Start Test" Name="start_test">
            <Parameters>
            	<Parameter AllowedValues="True,False" DefaultValue="True" Description="" DisplayName="Block the command until test finish to run" Mandatory="False" Name="blocking" Type="Lookup" />
            </Parameters>
        </Command>
        <Command Description="" DisplayName="Stop Test" Name="stop_test">
        </Command>
        <Command Description="Get statistics view" DisplayName="Get Statistics" Name="get_statistics">
         <Parameters>
            	<Parameter Description="" DisplayName="View Name" Mandatory="True" Name="view_name" Type="String" />
                <Parameter AllowedValues="CSV, PDF" DefaultValue="CSV" Description="CSV or PDF" DisplayName="Output Type" Mandatory="True" Name="output_type" Type="Lookup" />
            </Parameters>
        </Command>

    </Layout>
</Driver>